{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "outDir": "dist/",
    "allowJs": true,
    "isolatedModules": true,
    "checkJs": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "./dist/**/*",
    "src/assets/layers/**/*",
    "src/examples/**/*",
    "ele/**/*"
  ],
}